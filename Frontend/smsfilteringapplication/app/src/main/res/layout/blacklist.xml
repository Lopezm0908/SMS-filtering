<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:context=".screens.Blacklist"-->

    <SearchView
        android:id="@+id/blsearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search Item"
        android:layout_margin="16dp"
        android:iconifiedByDefault="false"/>

    <ListView
        android:id="@+id/bllistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blsearchView"
        android:layout_marginTop="16dp"
        android:dividerHeight="1dp"
        android:divider="@android:color/darker_gray"
        android:layout_above="@+id/bladdItemButton"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/bladdItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>