<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Blacklist">


    <ListView
        android:id="@+id/blacklist_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/label"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/black"
        android:background="@color/black">

    </ListView>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/darkPastelPurple"
        android:text="Blacklist"

        ></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="131dp"
        android:layout_height="38dp"
        android:layout_above="@+id/blacklist_listview"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="12dp"
        android:text="Blacklist"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/mainmenubtn"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/blacklist_listview"
        android:radius = "0dp"
        android:backgroundTint="@color/darkPastelPurple"
        android:text="Main Menu" />

    <Button
        android:id="@+id/additembtn"
        android:layout_width="196dp"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/blacklist_listview"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="-152dp"
        android:layout_toEndOf="@+id/mainmenubtn"


        android:backgroundTint="@color/darkPastelPurple"
        android:text="Add Number" />

</RelativeLayout>